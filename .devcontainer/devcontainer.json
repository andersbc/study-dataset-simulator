{
  "name": "Sim Site Monorepo (Node, Deno, R)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "deno.enablePaths": [
          "./apps/api",
          "./packages/shared",
          "./scripts",
          "./deno.json"
        ],
        "deno.unstable": true,
        "deno.lint": true,
        "editor.defaultFormatter": "denoland.vscode-deno",
        "[vue]": {
          "editor.defaultFormatter": "Vue.volar"
        },
        "[javascript]": {
          "editor.defaultFormatter": "denoland.vscode-deno"
        },
        "[typescript]": {
          "editor.defaultFormatter": "denoland.vscode-deno"
        }
      },
      "extensions": [
        "denoland.vscode-deno",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "node"
}